<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="6"
        android:columnCount="4"
        tools:context=".Calculator"
        >

    <TextView
            android:text="0"
            android:textSize="80dp"
            android:textAlignment="viewEnd"
            android:layout_width="412dp"
            android:layout_height="110dp"
            android:maxLength = "9"
            android:inputType="number"
            android:layout_columnSpan="4"
            android:layout_row="0"
            android:textColor="#FFFFFF"
            android:background="@drawable/calculator_4"
            android:id="@+id/c_num"/>

    <Button
            android:text="+"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/calculator_1"
            android:textSize="50dp"
            android:id="@+id/add"/>

    <Button
            android:text="-"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/calculator_1"
            android:textSize="50dp"
            android:id="@+id/subtract"/>

    <Button
            android:text="ร"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/calculator_1"
            android:textSize="50dp"
            android:id="@+id/multiply"/>

    <Button
            android:text="รท"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@drawable/calculator_1"
            android:textSize="50dp"
            android:id="@+id/divide"/>

    <Button
            android:text="7"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/calculator_2"
            android:textSize="50dp"
            android:id="@+id/num_7"/>

    <Button
            android:text="8"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/calculator_2"
            android:textSize="50dp"
            android:id="@+id/num_8"/>

    <Button
            android:text="9"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/calculator_2"
            android:textSize="50dp"
            android:id="@+id/num_9"/>

    <Button
            android:text="4"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@drawable/calculator_2"
            android:textSize="50dp"
            android:id="@+id/num_4"/>

    <Button
            android:text="5"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@drawable/calculator_2"
            android:textSize="50dp"
            android:id="@+id/num_5"/>

    <Button
            android:text="6"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="2"
            android:background="@drawable/calculator_2"
            android:textSize="50dp"
            android:id="@+id/num_6"/>

    <Button
            android:text="1"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="0"
            android:background="@drawable/calculator_2"
            android:textSize="50dp"
            android:id="@+id/num_1"/>

    <Button
            android:text="2"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@drawable/calculator_2"
            android:textSize="50dp"
            android:id="@+id/num_2"/>

    <Button
            android:text="3"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="2"
            android:background="@drawable/calculator_2"
            android:textSize="50dp"
            android:id="@+id/num_3"/>

    <Button
            android:text="0"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="5"
            android:layout_column="0"
            android:background="@drawable/calculator_2"
            android:textSize="50dp"
            android:id="@+id/num_0"/>

    <Button
            android:text="."
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="5"
            android:layout_column="1"
            android:background="@drawable/calculator_2"
            android:textSize="50dp"
            android:id="@+id/point"/>

    <Button
            android:text="AC"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="5"
            android:layout_column="2"
            android:background="@drawable/calculator_2"
            android:textSize="50dp"
            android:id="@+id/All_clear"/>

    <Button
            android:text="="
            android:layout_width="103dp"
            android:layout_height="400dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_rowSpan="4"
            android:background="@drawable/calculator_3"
            android:textSize="50dp"
            android:id="@+id/bt_equal"/>
</GridLayout>
